server {
    listen 80 default;
    <% if @enable_ssl %>
    return https://$host$request_uri ;
    <% else %>
      <%= render "nginx-common.erb", :local => false %>
    <% end %>
}
     <% if @enable_ssl %>
server {
    listen 443 default;
    ssl on;
    ssl_certificate <%= @ssl_certificate %>;
    ssl_certificate_key <%= @ssl_certificate_key %>;
    <%= render "nginx-common.erb", :local =>false %>
}
  <% end %>
